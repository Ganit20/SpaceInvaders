<Page x:Class="SpaceInvaders.View.PlayerStats"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpaceInvaders.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerStats" Foreground="White">

    <Grid>
        <WrapPanel Orientation="Vertical" x:Name="PlayerInfo">
            <WrapPanel Orientation="Horizontal">
                <TextBlock FontSize="15" Text="Name: "/>
                <TextBlock FontSize="15" Text="{Binding Name}"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
            <TextBlock FontSize="15"  Text="Money: "/>
            <TextBlock FontSize="15" Text="{Binding Money}"/>
        </WrapPanel>
    </WrapPanel>
    </Grid>
</Page>
