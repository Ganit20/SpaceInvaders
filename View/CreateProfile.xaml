<Page x:Class="SpaceInvaders.View.CreateProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpaceInvaders.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Foreground="White"
      Title="CreateProfile">

    <Grid>
        <WrapPanel Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center" Background="Black" >
            <TextBlock FontSize="30" Padding="15" Text="Create Profie: " />
            <TextBox Padding="5" x:Name="ProfileName" Margin="10"/>
            <Button Click="Set" Padding="5" Background="Black" BorderBrush="White" Foreground="White" Content="Set Nickname" Margin="20"/>
        </WrapPanel>
    </Grid>
</Page>
